{
  "name": "visual-regression-assert",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/visual-regression-assert/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": ["platform:any", "tools"],
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/visual-regression-assert",
        "main": "tools/visual-regression-assert/src/index.ts",
        "tsConfig": "tools/visual-regression-assert/tsconfig.lib.json",
        "assets": ["tools/visual-regression-assert/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "command": "jest",
      "options": {
        "cwd": "tools/visual-regression-assert",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    }
  }
}
